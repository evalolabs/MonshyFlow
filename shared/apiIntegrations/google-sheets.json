{
  "id": "google-sheets",
  "name": "Google Sheets (API)",
  "icon": "ðŸ“Š",
  "logoUrl": "https://cdn.simpleicons.org/googlesheets/34A853",
  "description": "Spreadsheet and data management",
  "baseUrl": "https://sheets.googleapis.com/v4/spreadsheets",
  "color": {
    "bg": "from-green-100 to-emerald-100",
    "border": "border-green-500",
    "icon": "text-green-700",
    "handle": "bg-green-600"
  },
  "authentication": {
    "type": "oauth2",
    "authorizationUrl": "https://accounts.google.com/o/oauth2/v2/auth",
    "tokenUrl": "https://oauth2.googleapis.com/token",
    "headerName": "Authorization",
    "headerFormat": "Bearer {accessToken}",
    "secretKey": "GOOGLE_SHEETS_ACCESS_TOKEN",
    "clientIdSecretKey": "GOOGLE_SHEETS_CLIENT_ID",
    "clientSecretSecretKey": "GOOGLE_SHEETS_CLIENT_SECRET",
    "scope": "https://www.googleapis.com/auth/spreadsheets",
    "refreshTokenSecretKey": "GOOGLE_SHEETS_REFRESH_TOKEN"
  },
  "endpoints": [
    {
      "id": "create-spreadsheet",
      "name": "Create Spreadsheet",
      "description": "Create a new Google Spreadsheet",
      "method": "POST",
      "path": "/spreadsheets",
      "headers": {
        "Content-Type": "application/json"
      },
      "bodySchema": {
        "type": "object",
        "properties": {
          "properties": {
            "type": "object",
            "properties": {
              "title": { "type": "string", "required": true, "description": "Spreadsheet title" }
            },
            "required": ["title"]
          },
          "sheets": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "properties": {
                  "type": "object",
                  "properties": {
                    "title": { "type": "string", "description": "Sheet title" }
                  }
                }
              }
            },
            "description": "Initial sheets to create"
          }
        },
        "required": ["properties"]
      },
      "urlTemplate": "https://sheets.googleapis.com/v4/spreadsheets"
    },
    {
      "id": "get-spreadsheet",
      "name": "Get Spreadsheet",
      "description": "Get spreadsheet metadata by ID",
      "method": "GET",
      "path": "/{spreadsheetId}",
      "queryParams": {
        "includeGridData": "false"
      },
      "urlTemplate": "https://sheets.googleapis.com/v4/spreadsheets/{spreadsheetId}"
    },
    {
      "id": "append-row",
      "name": "Append Row",
      "description": "Append a new row to a Google Sheet",
      "method": "POST",
      "path": "/{spreadsheetId}/values/{range}:append",
      "headers": {
        "Content-Type": "application/json"
      },
      "bodySchema": {
        "type": "object",
        "properties": {
          "values": {
            "type": "array",
            "items": {
              "type": "array",
              "items": { "type": "string" }
            },
            "description": "Array of rows, each row is an array of cell values",
            "required": true
          },
          "valueInputOption": { 
            "type": "string", 
            "default": "RAW", 
            "description": "How to interpret input values (RAW, USER_ENTERED)",
            "enum": ["RAW", "USER_ENTERED"]
          },
          "insertDataOption": {
            "type": "string",
            "default": "INSERT_ROWS",
            "description": "How to insert data (OVERWRITE, INSERT_ROWS)",
            "enum": ["OVERWRITE", "INSERT_ROWS"]
          }
        },
        "required": ["values"]
      },
      "urlTemplate": "https://sheets.googleapis.com/v4/spreadsheets/{spreadsheetId}/values/{range}:append?valueInputOption=RAW"
    },
    {
      "id": "get-range",
      "name": "Get Range",
      "description": "Get values from a specific range in a sheet",
      "method": "GET",
      "path": "/{spreadsheetId}/values/{range}",
      "queryParams": {
        "valueRenderOption": "FORMATTED_VALUE",
        "dateTimeRenderOption": "SERIAL_NUMBER"
      },
      "urlTemplate": "https://sheets.googleapis.com/v4/spreadsheets/{spreadsheetId}/values/{range}"
    },
    {
      "id": "update-range",
      "name": "Update Range",
      "description": "Update values in a specific range",
      "method": "PUT",
      "path": "/{spreadsheetId}/values/{range}",
      "headers": {
        "Content-Type": "application/json"
      },
      "bodySchema": {
        "type": "object",
        "properties": {
          "values": {
            "type": "array",
            "items": {
              "type": "array",
              "items": { "type": "string" }
            },
            "description": "Array of rows, each row is an array of cell values",
            "required": true
          },
          "valueInputOption": { 
            "type": "string", 
            "default": "RAW", 
            "description": "How to interpret input values (RAW, USER_ENTERED)",
            "enum": ["RAW", "USER_ENTERED"]
          }
        },
        "required": ["values"]
      },
      "urlTemplate": "https://sheets.googleapis.com/v4/spreadsheets/{spreadsheetId}/values/{range}?valueInputOption=RAW"
    },
    {
      "id": "clear-range",
      "name": "Clear Range",
      "description": "Clear values from a specific range",
      "method": "POST",
      "path": "/{spreadsheetId}/values/{range}:clear",
      "headers": {
        "Content-Type": "application/json"
      },
      "bodySchema": {
        "type": "object",
        "properties": {
          "range": { 
            "type": "string", 
            "description": "Range to clear (e.g., 'Sheet1!A1:B10')",
            "required": true
          }
        },
        "required": ["range"]
      },
      "urlTemplate": "https://sheets.googleapis.com/v4/spreadsheets/{spreadsheetId}/values/{range}:clear"
    },
    {
      "id": "batch-update",
      "name": "Batch Update",
      "description": "Update multiple ranges in a single request",
      "method": "POST",
      "path": "/{spreadsheetId}/values:batchUpdate",
      "headers": {
        "Content-Type": "application/json"
      },
      "bodySchema": {
        "type": "object",
        "properties": {
          "valueInputOption": { 
            "type": "string", 
            "default": "RAW", 
            "description": "How to interpret input values (RAW, USER_ENTERED)",
            "enum": ["RAW", "USER_ENTERED"]
          },
          "data": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "range": { 
                  "type": "string", 
                  "required": true,
                  "description": "Range to update (e.g., 'Sheet1!A1:B10')"
                },
                "values": {
                  "type": "array",
                  "items": {
                    "type": "array",
                    "items": { "type": "string" }
                  },
                  "required": true,
                  "description": "Array of rows, each row is an array of cell values"
                }
              },
              "required": ["range", "values"]
            },
            "required": true,
            "description": "Array of data updates"
          }
        },
        "required": ["data"]
      },
      "urlTemplate": "https://sheets.googleapis.com/v4/spreadsheets/{spreadsheetId}/values:batchUpdate"
    },
    {
      "id": "delete-sheet",
      "name": "Delete Sheet",
      "description": "Delete a sheet from a spreadsheet",
      "method": "DELETE",
      "path": "/{spreadsheetId}/sheets/{sheetId}",
      "urlTemplate": "https://sheets.googleapis.com/v4/spreadsheets/{spreadsheetId}/sheets/{sheetId}"
    }
  ]
}
