          "query": {
            "type": "string",
            "required": true,
            "description": "GraphQL query: query Issues($filter: IssueFilter, $after: String) { issues(filter: $filter, after: $after, first: 50) { nodes { id title state { name } } pageInfo { hasNextPage endCursor } } }",
            "default": "query Issues($filter: IssueFilter, $after: String) { issues(filter: $filter, after: $after, first: 50) { nodes { id title description state { id name } assignee { id name } team { id name } priority } pageInfo { hasNextPage endCursor } } }"
