          "variables": {
            "type": "object",
            "properties": {
              "filter": {
                "type": "object",
                "properties": {
                  "team": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "string" }
                    }
                  },
                  "assignee": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "string" }
                    }
                  },
                  "state": {
                    "type": "object",
                    "properties": {
                      "type": { "type": "string", "enum": ["unstarted", "started", "completed", "canceled"] }
                    }
                  }
                }
              },
              "after": { "type": "string", "description": "Cursor for pagination" }
            }
          }
        },
        "required": ["query"]
      },
      "urlTemplate": "https://api.linear.app/graphql"
