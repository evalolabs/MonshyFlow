        "include": { "type": "array", "items": { "type": "integer" }, "description": "Include post IDs" },
        "offset": { "type": "integer", "description": "Offset" },
        "order": { "type": "string", "enum": ["asc", "desc"], "default": "desc", "description": "Sort order" },
        "orderby": { "type": "string", "enum": ["date", "id", "include", "relevance", "slug", "title"], "default": "date", "description": "Sort by" },
        "slug": { "type": "string", "description": "Post slug" },
        "status": { "type": "string", "enum": ["publish", "future", "draft", "pending", "private"], "description": "Post status" },
        "categories": { "type": "array", "items": { "type": "integer" }, "description": "Category IDs" },
        "categories_exclude": { "type": "array", "items": { "type": "integer" }, "description": "Exclude category IDs" },
        "tags": { "type": "array", "items": { "type": "integer" }, "description": "Tag IDs" },
        "tags_exclude": { "type": "array", "items": { "type": "integer" }, "description": "Exclude tag IDs" },
        "sticky": { "type": "boolean", "description": "Sticky posts only" }
      },
      "urlTemplate": "{url}/wp-json/wp/v2/posts"
    },
