  "description": "Content management system",
  "baseUrl": "{url}/wp-json/wp/v2",
  "color": {
    "bg": "from-blue-100 to-indigo-100",
    "border": "border-blue-500",
    "icon": "text-blue-700",
    "handle": "bg-blue-600"
  },
  "authentication": {
    "type": "basic",
    "headerName": "Authorization",
    "headerFormat": "Basic {base64(username:password)}",
    "secretKey": "WORDPRESS_APPLICATION_PASSWORD",
    "usernameSecretKey": "WORDPRESS_USERNAME"
  },
  "endpoints": [
    {
      "id": "create-post",
      "name": "Create Post",
      "description": "Create a new post",
      "method": "POST",
      "path": "/posts",
      "headers": {
        "Content-Type": "application/json"
      },
      "bodySchema": {
        "type": "object",
        "properties": {
          "title": { "type": "string", "required": true, "description": "Post title" },
          "content": { "type": "string", "description": "Post content (HTML)" },
          "excerpt": { "type": "string", "description": "Post excerpt" },
          "status": { "type": "string", "enum": ["publish", "future", "draft", "pending", "private"], "default": "draft", "description": "Post status" },
          "featured_media": { "type": "integer", "description": "Featured media ID" },
          "categories": { "type": "array", "items": { "type": "integer" }, "description": "Category IDs" },
          "tags": { "type": "array", "items": { "type": "integer" }, "description": "Tag IDs" },
          "author": { "type": "integer", "description": "Author ID" },
          "comment_status": { "type": "string", "enum": ["open", "closed"], "default": "open", "description": "Comment status" },
          "ping_status": { "type": "string", "enum": ["open", "closed"], "default": "open", "description": "Ping status" },
          "format": { "type": "string", "enum": ["standard", "aside", "chat", "gallery", "link", "image", "quote", "status", "video", "audio"], "default": "standard", "description": "Post format" },
          "sticky": { "type": "boolean", "default": false, "description": "Sticky post" },
          "template": { "type": "string", "description": "Template file name" },
          "meta": { "type": "object", "description": "Custom meta fields" },
          "date": { "type": "string", "format": "date-time", "description": "Publication date" },
          "date_gmt": { "type": "string", "format": "date-time", "description": "Publication date (GMT)" },
          "slug": { "type": "string", "description": "Post slug" },
          "password": { "type": "string", "description": "Post password (for password-protected posts)" }
        },
        "required": ["title"]
      },
      "urlTemplate": "{url}/wp-json/wp/v2/posts"
    },
    {
      "id": "get-post",
      "name": "Get Post",
      "description": "Get a post by ID",
      "method": "GET",
      "path": "/posts/{id}",
      "queryParams": {
        "context": { "type": "string", "enum": ["view", "edit", "embed"], "default": "view", "description": "Context" },
        "password": { "type": "string", "description": "Password for password-protected posts" }
      },
      "urlTemplate": "{url}/wp-json/wp/v2/posts/{id}"
    },
    {
      "id": "list-posts",
