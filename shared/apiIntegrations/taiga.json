  "authentication": {
    "type": "basic",
    "headerName": "Authorization",
    "headerFormat": "Bearer {apiKey}",
    "secretKey": "TAIGA_SESSION_TOKEN",
    "usernameSecretKey": "TAIGA_USERNAME",
    "note": "Host should be provided in baseUrl placeholder {host} or as TAIGA_BASE_URL secret key for self-hosted instances. Session token is obtained by authenticating with username and password via /auth endpoint."
  },
  "endpoints": [
    {
      "id": "create-issue",
      "name": "Create Issue",
      "description": "Create a new issue",
      "method": "POST",
      "path": "/issues",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Bearer {apiKey}"
      },
      "bodySchema": {
        "type": "object",
        "properties": {
          "subject": { "type": "string", "required": true, "description": "Issue subject" },
          "description": { "type": "string", "description": "Issue description" },
          "project": { "type": "integer", "required": true, "description": "Project ID" },
          "status": { "type": "integer", "description": "Status ID" },
          "priority": { "type": "integer", "description": "Priority ID" },
          "severity": { "type": "integer", "description": "Severity ID" },
          "type": { "type": "integer", "description": "Type ID" },
          "assigned_to": { "type": "integer", "description": "Assigned user ID" },
          "tags": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Tags"
          },
          "watchers": {
            "type": "array",
            "items": { "type": "integer" },
            "description": "Watcher user IDs"
          }
        },
        "required": ["subject", "project"]
      },
      "urlTemplate": "https://api.taiga.io/api/v1/issues"
    },
    {
      "id": "get-issue",
      "name": "Get Issue",
      "description": "Get issue by ID",
      "method": "GET",
      "path": "/issues/{id}",
      "headers": {
        "Authorization": "Bearer {apiKey}"
      },
      "urlTemplate": "https://api.taiga.io/api/v1/issues/{id}"
    },
    {
      "id": "list-issues",
      "name": "List Issues",
      "description": "List all issues",
