{
  "id": "google-docs",
  "name": "Google Docs (API)",
  "icon": "ðŸ“„",
  "logoUrl": "https://cdn.simpleicons.org/googledocs/4285F4",
  "description": "Google Docs API for creating and managing documents",
  "baseUrl": "https://docs.googleapis.com/v1",
  "color": {
    "bg": "from-blue-100 to-sky-100",
    "border": "border-blue-500",
    "icon": "text-blue-700",
    "handle": "bg-blue-600"
  },
  "authentication": {
    "type": "bearer",
    "headerName": "Authorization",
    "headerFormat": "Bearer {apiKey}",
    "secretKey": "GOOGLE_DOCS_OAUTH2_ACCESS_TOKEN",
    "note": "Supports OAuth2 (GOOGLE_DOCS_OAUTH2_ACCESS_TOKEN) or Service Account (GOOGLE_DOCS_SERVICE_ACCOUNT_KEY) authentication."
  },
  "endpoints": [
    {
      "id": "create-document",
      "name": "Create Document",
      "description": "Create a new Google Doc",
      "method": "POST",
      "path": "/documents",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Bearer {apiKey}"
      },
      "bodySchema": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "Document title"
          }
        }
      },
      "urlTemplate": "https://docs.googleapis.com/v1/documents"
    },
    {
      "id": "get-document",
      "name": "Get Document",
      "description": "Get document by ID",
      "method": "GET",
      "path": "/documents/{documentId}",
      "headers": {
        "Authorization": "Bearer {apiKey}"
      },
      "queryParams": {
        "suggestionsViewMode": {
          "type": "string",
          "enum": ["DEFAULT_FOR_CURRENT_ACCESS", "SUGGESTIONS_INLINE", "SUGGESTIONS_SUPPRESSED"],
          "description": "Suggestions view mode"
        }
      },
      "urlTemplate": "https://docs.googleapis.com/v1/documents/{documentId}"
    },
    {
      "id": "list-documents",
      "name": "List Documents",
      "description": "List all documents (Note: Google Docs API doesn't have a direct list endpoint. This would typically use Google Drive API to list files with mimeType='application/vnd.google-apps.document')",
      "method": "GET",
      "path": "/documents",
      "headers": {
        "Authorization": "Bearer {apiKey}"
      },
      "urlTemplate": "https://docs.googleapis.com/v1/documents"
    },
    {
      "id": "batch-update-document",
      "name": "Batch Update Document",
      "description": "Apply batch updates to a document",
      "method": "POST",
      "path": "/documents/{documentId}:batchUpdate",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Bearer {apiKey}"
      },
      "bodySchema": {
        "type": "object",
        "properties": {
          "requests": {
            "type": "array",
            "items": {
              "type": "object",
              "description": "Update request",
              "additionalProperties": true
            },
            "required": true,
            "description": "Array of update requests"
          },
          "writeControl": {
            "type": "object",
            "properties": {
              "requiredRevisionId": {
                "type": "string",
                "description": "Required revision ID for optimistic locking"
              },
              "targetRevisionId": {
                "type": "string",
                "description": "Target revision ID"
              }
            },
            "description": "Write control for optimistic locking"
          }
        },
        "required": ["requests"]
      },
      "urlTemplate": "https://docs.googleapis.com/v1/documents/{documentId}:batchUpdate"
    }
  ]
}

