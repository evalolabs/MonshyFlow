      "description": "List all logs for a task",
      "method": "GET",
      "path": "/case/{caseId}/task/{taskId}/log",
      "headers": {
        "Authorization": "Bearer {apiKey}"
      },
      "urlTemplate": "https://{your-thehive-instance}/api/case/{caseId}/task/{taskId}/log"
    },
    {
