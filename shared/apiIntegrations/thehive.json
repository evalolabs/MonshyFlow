        "Authorization": "Bearer {apiKey}"
      },
      "queryParams": {
        "range": {
          "type": "string",
          "description": "Range for pagination (e.g., '0-24')"
        },
        "sort": {
          "type": "string",
          "description": "Sort field"
        }
      },
      "urlTemplate": "https://{your-thehive-instance}/api/case"
    },
    {
      "id": "update-case",
      "name": "Update Case",
      "description": "Update a case",
      "method": "PATCH",
      "path": "/case/{caseId}",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Bearer {apiKey}"
      },
      "bodySchema": {
        "type": "object",
        "description": "Case data to update",
        "additionalProperties": true
      },
      "urlTemplate": "https://{your-thehive-instance}/api/case/{caseId}"
    },
    {
      "id": "create-task",
      "name": "Create Task",
      "description": "Create a new task in a case",
      "method": "POST",
      "path": "/case/{caseId}/task",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Bearer {apiKey}"
      },
      "bodySchema": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "required": true,
            "description": "Task title"
          },
          "description": {
            "type": "string",
            "description": "Task description"
          },
          "status": {
            "type": "string",
            "enum": ["Waiting", "InProgress", "Completed", "Cancel"],
            "default": "Waiting",
            "description": "Task status"
          },
          "flag": {
            "type": "boolean",
            "default": false,
            "description": "Task flag"
          },
          "startDate": {
            "type": "string",
            "format": "date-time",
            "description": "Start date (ISO 8601)"
          },
          "dueDate": {
            "type": "string",
            "format": "date-time",
            "description": "Due date (ISO 8601)"
          },
          "assignee": {
            "type": "string",
            "description": "Assignee username"
          }
        },
        "required": ["title"]
      },
      "urlTemplate": "https://{your-thehive-instance}/api/case/{caseId}/task"
    },
    {
      "id": "get-task",
      "name": "Get Task",
      "description": "Get task by ID",
      "method": "GET",
      "path": "/case/{caseId}/task/{taskId}",
      "headers": {
        "Authorization": "Bearer {apiKey}"
      },
      "urlTemplate": "https://{your-thehive-instance}/api/case/{caseId}/task/{taskId}"
    },
    {
      "id": "list-tasks",
      "name": "List Tasks",
      "description": "List all tasks in a case",
      "method": "GET",
      "path": "/case/{caseId}/task",
      "headers": {
        "Authorization": "Bearer {apiKey}"
      },
      "urlTemplate": "https://{your-thehive-instance}/api/case/{caseId}/task"
    },
    {
      "id": "update-task",
      "name": "Update Task",
      "description": "Update a task",
      "method": "PATCH",
      "path": "/case/{caseId}/task/{taskId}",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Bearer {apiKey}"
      },
      "bodySchema": {
        "type": "object",
        "description": "Task data to update",
        "additionalProperties": true
      },
      "urlTemplate": "https://{your-thehive-instance}/api/case/{caseId}/task/{taskId}"
    },
    {
      "id": "create-observable",
      "name": "Create Observable",
      "description": "Create a new observable in a case",
      "method": "POST",
      "path": "/case/{caseId}/observable",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Bearer {apiKey}"
      },
      "bodySchema": {
        "type": "object",
        "properties": {
          "dataType": {
            "type": "string",
            "required": true,
            "description": "Data type (e.g., 'ip', 'domain', 'url', 'file', 'hash')"
          },
          "data": {
            "type": "string",
            "required": true,
            "description": "Observable data"
          },
          "message": {
            "type": "string",
            "description": "Message"
          },
          "tags": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Tags"
          },
          "ioc": {
            "type": "boolean",
            "default": false,
            "description": "Is indicator of compromise"
          },
          "sighted": {
            "type": "boolean",
            "default": false,
            "description": "Is sighted"
          },
          "tlp": {
            "type": "integer",
            "enum": [0, 1, 2, 3],
            "description": "Traffic Light Protocol (0=white, 1=green, 2=amber, 3=red)"
          },
          "pap": {
            "type": "integer",
            "enum": [0, 1, 2, 3],
            "description": "Permissible Actions Protocol (0=white, 1=green, 2=amber, 3=red)"
          }
        },
        "required": ["dataType", "data"]
      },
      "urlTemplate": "https://{your-thehive-instance}/api/case/{caseId}/observable"
    },
    {
      "id": "get-observable",
      "name": "Get Observable",
