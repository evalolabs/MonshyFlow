{
  "id": "thehive",
  "name": "TheHive",
  "icon": "üõ°Ô∏è",
  "description": "Security incident response platform",
  "baseUrl": "https://{your-thehive-instance}/api",
  "color": {
    "bg": "from-red-100 to-yellow-100",
    "border": "border-red-500",
    "icon": "text-red-700",
    "handle": "bg-red-600"
  },
  "authentication": {
    "type": "apiKey",
    "headerName": "Authorization",
    "headerFormat": "Bearer {apiKey}",
    "secretKey": "THEHIVE_API_KEY",
    "note": "Base URL should be provided in baseUrl placeholder {your-thehive-instance} or as THEHIVE_BASE_URL secret key."
  },
  "endpoints": [
    {
      "id": "create-alert",
      "name": "Create Alert",
      "description": "Create a new alert",
      "method": "POST",
      "path": "/alert",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Bearer {apiKey}"
      },
      "bodySchema": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "required": true,
            "description": "Alert title"
          },
          "description": {
            "type": "string",
            "description": "Alert description"
          },
          "type": {
            "type": "string",
            "description": "Alert type"
          },
          "source": {
            "type": "string",
            "description": "Alert source"
          },
          "sourceRef": {
            "type": "string",
            "description": "Source reference"
          },
          "externalLink": {
            "type": "string",
            "format": "uri",
            "description": "External link"
          },
          "severity": {
            "type": "integer",
            "enum": [1, 2, 3, 4],
            "description": "Severity (1=low, 2=medium, 3=high, 4=critical)"
          },
          "date": {
            "type": "string",
            "format": "date-time",
            "description": "Alert date (ISO 8601)"
          },
          "tags": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Tags"
          },
          "artifacts": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "dataType": { "type": "string" },
                "data": { "type": "string" },
                "message": { "type": "string" },
                "tags": {
                  "type": "array",
                  "items": { "type": "string" }
                }
              },
              "required": ["dataType", "data"]
            },
            "description": "Artifacts"
          },
          "customFields": {
            "type": "object",
            "description": "Custom fields",
            "additionalProperties": true
          }
        },
        "required": ["title"]
      },
      "urlTemplate": "https://{your-thehive-instance}/api/alert"
    },
    {
      "id": "get-alert",
      "name": "Get Alert",
      "description": "Get alert by ID",
      "method": "GET",
      "path": "/alert/{alertId}",
      "headers": {
        "Authorization": "Bearer {apiKey}"
      },
      "urlTemplate": "https://{your-thehive-instance}/api/alert/{alertId}"
    },
    {
      "id": "list-alerts",
      "name": "List Alerts",
      "description": "List all alerts",
      "method": "GET",
      "path": "/alert",
      "headers": {
        "Authorization": "Bearer {apiKey}"
      },
      "queryParams": {
        "range": {
          "type": "string",
          "description": "Range for pagination (e.g., '0-24')"
        },
        "sort": {
          "type": "string",
          "description": "Sort field"
        }
      },
      "urlTemplate": "https://{your-thehive-instance}/api/alert"
    },
    {
      "id": "update-alert",
      "name": "Update Alert",
      "description": "Update an alert",
      "method": "PATCH",
      "path": "/alert/{alertId}",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Bearer {apiKey}"
      },
      "bodySchema": {
        "type": "object",
        "description": "Alert data to update",
        "additionalProperties": true
      },
      "urlTemplate": "https://{your-thehive-instance}/api/alert/{alertId}"
    },
    {
      "id": "create-case",
