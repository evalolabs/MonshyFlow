          },
          "startDate": {
            "type": "string",
            "format": "date-time",
            "description": "Start date (ISO 8601)"
          },
          "tags": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Tags"
          },
          "customFields": {
            "type": "object",
            "description": "Custom fields",
