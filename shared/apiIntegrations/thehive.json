          }
        },
        "required": ["message"]
      },
      "urlTemplate": "https://{your-thehive-instance}/api/case/{caseId}/task/{taskId}/log"
    },
    {
      "id": "get-log",
      "name": "Get Log",
      "description": "Get log by ID",
      "method": "GET",
      "path": "/case/{caseId}/task/{taskId}/log/{logId}",
