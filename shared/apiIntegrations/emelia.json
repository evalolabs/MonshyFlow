{
  "id": "emelia",
  "name": "Emelia",
  "icon": "ðŸ“§",
  "logoUrl": "https://cdn.simpleicons.org/emelia/000000",
  "description": "Cold email marketing platform with GraphQL API",
  "baseUrl": "https://graphql.emelia.io",
  "color": {
    "bg": "from-purple-100 to-indigo-100",
    "border": "border-purple-500",
    "icon": "text-purple-700",
    "handle": "bg-purple-600"
  },
  "authentication": {
    "type": "apiKey",
    "headerName": "Authorization",
    "headerFormat": "{apiKey}",
    "secretKey": "EMELIA_API_KEY",
    "note": "Uses GraphQL instead of REST API. All requests are POST to /graphql endpoint with GraphQL query/mutation in the body."
  },
  "endpoints": [
    {
      "id": "graphql-query",
      "name": "GraphQL Query",
      "description": "Execute a GraphQL query or mutation",
      "method": "POST",
      "path": "/graphql",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "{apiKey}"
      },
      "bodySchema": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "required": true,
            "description": "GraphQL query or mutation string"
          },
          "variables": {
            "type": "object",
            "description": "GraphQL variables",
            "additionalProperties": true
          },
          "operationName": {
            "type": "string",
            "description": "Operation name (for queries with multiple operations)"
          }
        },
        "required": ["query"]
      },
      "urlTemplate": "https://graphql.emelia.io/graphql"
    },
    {
      "id": "create-campaign",
      "name": "Create Campaign",
      "description": "Create a new campaign (GraphQL mutation: createCampaign)",
      "method": "POST",
      "path": "/graphql",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "{apiKey}"
      },
      "bodySchema": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "default": "mutation CreateCampaign($input: CreateCampaignInput!) { createCampaign(input: $input) { id name } }",
            "description": "GraphQL mutation for createCampaign"
          },
          "variables": {
            "type": "object",
            "properties": {
              "input": {
                "type": "object",
                "description": "CreateCampaignInput",
                "additionalProperties": true
              }
            }
          }
        },
        "required": ["query"]
      },
      "urlTemplate": "https://graphql.emelia.io/graphql"
    },
    {
      "id": "get-campaign",
      "name": "Get Campaign",
      "description": "Get campaign by ID (GraphQL query: campaign)",
      "method": "POST",
      "path": "/graphql",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "{apiKey}"
      },
      "bodySchema": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "default": "query GetCampaign($id: ID!) { campaign(id: $id) { id name } }",
            "description": "GraphQL query for campaign"
          },
          "variables": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Campaign ID"
              }
            }
          }
        },
        "required": ["query"]
      },
      "urlTemplate": "https://graphql.emelia.io/graphql"
    },
    {
      "id": "list-campaigns",
      "name": "List Campaigns",
      "description": "List all campaigns (GraphQL query: campaigns)",
      "method": "POST",
      "path": "/graphql",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "{apiKey}"
      },
      "bodySchema": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "default": "query ListCampaigns { campaigns { id name } }",
            "description": "GraphQL query for campaigns"
          },
          "variables": {
            "type": "object",
            "description": "GraphQL variables",
            "additionalProperties": true
          }
        },
        "required": ["query"]
      },
      "urlTemplate": "https://graphql.emelia.io/graphql"
    },
    {
