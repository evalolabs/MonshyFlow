          },
          "variables": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Campaign ID to duplicate"
              }
            }
          }
        },
        "required": ["query"]
      },
      "urlTemplate": "https://graphql.emelia.io/graphql"
    },
    {
      "id": "start-campaign",
      "name": "Start Campaign",
