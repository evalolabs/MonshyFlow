      "urlTemplate": "https://graphql.emelia.io/graphql"
    },
    {
      "id": "add-contact-to-campaign",
      "name": "Add Contact to Campaign",
      "description": "Add a contact to a campaign (GraphQL mutation: addContactToCampaign)",
      "method": "POST",
      "path": "/graphql",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "{apiKey}"
      },
      "bodySchema": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "default": "mutation AddContactToCampaign($campaignId: ID!, $contactId: ID!) { addContactToCampaign(campaignId: $campaignId, contactId: $contactId) { id } }",
            "description": "GraphQL mutation for addContactToCampaign"
          },
          "variables": {
            "type": "object",
