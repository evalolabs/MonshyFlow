              },
              "required": ["number"]
            }
          },
          "addresses": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "street": { "type": "string" },
                "city": { "type": "string" },
                "state": { "type": "string" },
                "postal_code": { "type": "string" },
                "country": { "type": "string" }
              }
            }
          },
          "assignee_id": { "type": "number", "description": "Assignee user ID" },
          "tags": {
