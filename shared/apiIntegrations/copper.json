  "endpoints": [
    {
      "id": "create-opportunity",
      "name": "Create Opportunity",
      "description": "Create a new opportunity",
      "method": "POST",
      "path": "/opportunities",
      "headers": {
        "Content-Type": "application/json",
        "X-PW-Application": "developer_api"
      },
      "bodySchema": {
        "type": "object",
        "properties": {
          "name": { "type": "string", "required": true, "description": "Opportunity name" },
          "assignee_id": { "type": "number", "description": "Assignee user ID" },
          "close_date": { "type": "string", "format": "date", "description": "Close date (YYYY-MM-DD)" },
          "pipeline_id": { "type": "number", "description": "Pipeline ID" },
          "pipeline_stage_id": { "type": "number", "description": "Pipeline stage ID" },
          "monetary_value": { "type": "number", "description": "Monetary value" },
          "win_probability": { "type": "number", "description": "Win probability (0-100)" },
          "currency": { "type": "string", "default": "USD", "description": "Currency code" },
          "source_id": { "type": "number", "description": "Source ID" },
          "customer_source_id": { "type": "number", "description": "Customer source ID" },
          "loss_reason_id": { "type": "number", "description": "Loss reason ID" },
          "tags": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Tags"
          },
          "custom_fields": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "custom_field_definition_id": { "type": "number", "required": true },
                "value": {
                  "type": ["string", "number", "boolean", "array"],
                  "required": true
                }
              },
              "required": ["custom_field_definition_id", "value"]
            }
          }
        },
        "required": ["name"]
      },
      "urlTemplate": "https://api.copper.com/developer_api/v1/opportunities"
    },
    {
      "id": "get-opportunity",
      "name": "Get Opportunity",
      "description": "Get opportunity details by ID",
      "method": "GET",
      "path": "/opportunities/{id}",
      "headers": {
        "X-PW-Application": "developer_api"
      },
      "urlTemplate": "https://api.copper.com/developer_api/v1/opportunities/{id}"
    },
    {
      "id": "list-opportunities",
      "name": "List Opportunities",
      "description": "List all opportunities",
      "method": "POST",
      "path": "/opportunities/search",
      "headers": {
        "Content-Type": "application/json",
        "X-PW-Application": "developer_api"
      },
      "bodySchema": {
        "type": "object",
        "properties": {
          "page_size": { "type": "number", "default": 200, "description": "Page size" },
          "page_number": { "type": "number", "default": 1, "description": "Page number" },
          "sort_by": { "type": "string", "default": "name", "description": "Sort field" },
          "sort_direction": { "type": "string", "enum": ["asc", "desc"], "default": "asc", "description": "Sort direction" }
        }
      },
      "urlTemplate": "https://api.copper.com/developer_api/v1/opportunities/search"
    },
    {
      "id": "update-opportunity",
      "name": "Update Opportunity",
      "description": "Update an existing opportunity",
      "method": "PUT",
      "path": "/opportunities/{id}",
      "headers": {
        "Content-Type": "application/json",
        "X-PW-Application": "developer_api"
      },
      "bodySchema": {
        "type": "object",
        "properties": {
          "id": { "type": "number", "required": true },
          "name": { "type": "string", "description": "Opportunity name" },
          "monetary_value": { "type": "number", "description": "Monetary value" },
          "win_probability": { "type": "number", "description": "Win probability" },
          "pipeline_stage_id": { "type": "number", "description": "Pipeline stage ID" },
          "close_date": { "type": "string", "format": "date", "description": "Close date" }
        },
        "required": ["id"]
      },
      "urlTemplate": "https://api.copper.com/developer_api/v1/opportunities/{id}"
    },
    {
      "id": "delete-opportunity",
      "name": "Delete Opportunity",
      "description": "Delete an opportunity",
