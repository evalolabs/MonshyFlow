          "priority": { "type": "string", "enum": ["None", "Low", "Medium", "High"], "description": "Task priority" },
          "status": { "type": "string", "enum": ["Open", "Completed"], "default": "Open", "description": "Task status" },
          "tags": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "required": ["name"]
