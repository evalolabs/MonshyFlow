{
  "id": "affinity",
  "name": "Affinity (API)",
  "icon": "ü§ù",
  "description": "Relationship intelligence and CRM platform",
  "baseUrl": "https://api.affinity.co",
  "color": {
    "bg": "from-indigo-100 to-blue-100",
    "border": "border-indigo-500",
    "icon": "text-indigo-700",
    "handle": "bg-indigo-600"
  },
  "authentication": {
    "type": "basic",
    "headerName": "Authorization",
    "headerFormat": "Basic {apiKey}",
    "secretKey": "AFFINITY_API_KEY",
    "note": "Basic Auth uses API Key as both username and password. Format: Basic base64(apiKey:apiKey)"
  },
  "endpoints": [
    {
      "id": "create-organization",
      "name": "Create Organization",
      "description": "Create a new organization",
      "method": "POST",
      "path": "/organizations",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Basic {apiKey}"
      },
      "bodySchema": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "required": true,
            "description": "Organization name"
          },
          "domain": {
            "type": "string",
            "description": "Domain"
          },
          "global": {
            "type": "boolean",
            "default": false,
            "description": "Is global organization"
          },
          "person_ids": {
            "type": "array",
            "items": { "type": "integer" },
            "description": "Person IDs associated with organization"
          },
          "list_ids": {
            "type": "array",
            "items": { "type": "integer" },
            "description": "List IDs"
          },
          "field_values": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "field_id": { "type": "integer" },
                "value": { "type": "string" }
              },
              "required": ["field_id", "value"]
            },
            "description": "Custom field values"
          }
        },
        "required": ["name"]
      },
      "urlTemplate": "https://api.affinity.co/organizations"
    },
    {
      "id": "get-organization",
      "name": "Get Organization",
      "description": "Get organization by ID",
      "method": "GET",
      "path": "/organizations/{organizationId}",
      "headers": {
        "Authorization": "Basic {apiKey}"
      },
      "urlTemplate": "https://api.affinity.co/organizations/{organizationId}"
    },
    {
      "id": "list-organizations",
      "name": "List Organizations",
      "description": "List all organizations",
      "method": "GET",
      "path": "/organizations",
      "headers": {
        "Authorization": "Basic {apiKey}"
      },
      "queryParams": {
        "term": {
          "type": "string",
          "description": "Search term"
        },
        "page_size": {
          "type": "integer",
          "default": 500,
          "description": "Number of results per page"
        },
        "page_token": {
          "type": "string",
          "description": "Token for pagination"
        }
      },
      "urlTemplate": "https://api.affinity.co/organizations"
    },
    {
      "id": "update-organization",
      "name": "Update Organization",
      "description": "Update an organization",
      "method": "PUT",
      "path": "/organizations/{organizationId}",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Basic {apiKey}"
      },
      "bodySchema": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Organization name"
          },
          "domain": {
            "type": "string",
            "description": "Domain"
          },
          "global": {
            "type": "boolean",
            "description": "Is global organization"
          },
          "person_ids": {
            "type": "array",
            "items": { "type": "integer" }
          },
          "list_ids": {
            "type": "array",
            "items": { "type": "integer" }
          },
          "field_values": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "field_id": { "type": "integer" },
                "value": { "type": "string" }
              },
              "required": ["field_id", "value"]
            }
          }
        }
      },
      "urlTemplate": "https://api.affinity.co/organizations/{organizationId}"
    },
    {
      "id": "create-person",
      "name": "Create Person",
