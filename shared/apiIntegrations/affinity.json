      },
      "queryParams": {
        "term": {
          "type": "string",
          "description": "Search term"
        },
        "page_size": {
          "type": "integer",
          "default": 500,
          "description": "Number of results per page"
        },
        "page_token": {
          "type": "string",
          "description": "Token for pagination"
        }
      },
      "urlTemplate": "https://api.affinity.co/persons"
    },
    {
      "id": "update-person",
      "name": "Update Person",
      "description": "Update a person",
      "method": "PUT",
      "path": "/persons/{personId}",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Basic {apiKey}"
      },
      "bodySchema": {
        "type": "object",
        "properties": {
          "first_name": {
            "type": "string",
            "description": "First name"
          },
          "last_name": {
            "type": "string",
            "description": "Last name"
          },
          "emails": {
            "type": "array",
