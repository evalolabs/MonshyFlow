      "name": "Create List Entry",
      "description": "Create a new list entry",
      "method": "POST",
      "path": "/list-entries",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Basic {apiKey}"
      },
      "bodySchema": {
        "type": "object",
        "properties": {
          "list_id": {
            "type": "integer",
            "required": true,
            "description": "List ID"
          },
          "entity_id": {
            "type": "integer",
            "required": true,
            "description": "Entity ID (organization or person)"
          },
          "entity_type": {
            "type": "string",
            "enum": ["organization", "person"],
            "required": true,
            "description": "Entity type"
          }
        },
        "required": ["list_id", "entity_id", "entity_type"]
      },
      "urlTemplate": "https://api.affinity.co/list-entries"
    },
    {
      "id": "get-list-entry",
      "name": "Get List Entry",
      "description": "Get list entry by ID",
