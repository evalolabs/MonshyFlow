    {
      "id": "add-group",
      "name": "Add Group",
      "description": "Add or update a group",
      "method": "POST",
      "path": "/group",
      "headers": {
        "Content-Type": "application/json"
      },
      "bodySchema": {
        "type": "object",
        "properties": {
          "groupId": { "type": "string", "required": true, "description": "Group ID" },
          "userId": { "type": "string", "description": "User ID" },
          "anonymousId": { "type": "string", "description": "Anonymous ID" },
          "traits": {
            "type": "object",
            "additionalProperties": true,
            "description": "Group traits/properties"
          },
          "context": {
            "type": "object",
            "properties": {
              "ip": { "type": "string", "description": "IP address" },
              "userAgent": { "type": "string", "description": "User agent" },
              "locale": { "type": "string", "description": "Locale" },
              "timezone": { "type": "string", "description": "Timezone" },
              "page": {
                "type": "object",
                "properties": {
                  "path": { "type": "string" },
                  "referrer": { "type": "string" },
                  "search": { "type": "string" },
                  "title": { "type": "string" },
                  "url": { "type": "string", "format": "uri" }
                }
              },
              "screen": {
                "type": "object",
                "properties": {
                  "width": { "type": "number" },
                  "height": { "type": "number" },
                  "density": { "type": "number" }
                }
              }
            },
            "description": "Context information"
          },
          "integrations": {
            "type": "object",
            "additionalProperties": true,
            "description": "Integration-specific options"
          },
          "timestamp": { "type": "string", "format": "date-time", "description": "Event timestamp" }
        },
        "required": ["groupId"]
      },
      "urlTemplate": "https://api.segment.io/v1/group"
    },
