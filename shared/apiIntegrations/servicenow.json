  "endpoints": [
    {
      "id": "create-table-record",
      "name": "Create Table Record",
      "description": "Create a new record in any table",
      "method": "POST",
      "path": "/now/table/{tableName}",
      "headers": {
        "Content-Type": "application/json",
        "Accept": "application/json"
      },
      "bodySchema": {
        "type": "object",
        "description": "Record data (fields depend on table schema)",
        "additionalProperties": true
      },
      "urlTemplate": "https://{subdomain}.service-now.com/api/now/table/{tableName}"
    },
    {
      "id": "get-table-record",
      "name": "Get Table Record",
      "description": "Get a record from any table by ID",
      "method": "GET",
      "path": "/now/table/{tableName}/{id}",
      "headers": {
        "Accept": "application/json"
      },
      "urlTemplate": "https://{subdomain}.service-now.com/api/now/table/{tableName}/{id}"
    },
    {
      "id": "list-table-records",
      "name": "List Table Records",
      "description": "List all records from any table",
      "method": "GET",
      "path": "/now/table/{tableName}",
      "headers": {
        "Accept": "application/json"
      },
      "queryParams": {
        "sysparm_query": "{query}",
        "sysparm_limit": "100",
        "sysparm_offset": "0",
        "sysparm_fields": "{fields}"
      },
      "urlTemplate": "https://{subdomain}.service-now.com/api/now/table/{tableName}"
    },
    {
      "id": "update-table-record",
