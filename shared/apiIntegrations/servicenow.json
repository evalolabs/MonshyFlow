        "sysparm_limit": "100",
        "sysparm_offset": "0"
      },
      "urlTemplate": "https://{subdomain}.service-now.com/api/now/table/incident"
    },
    {
      "id": "update-incident",
      "name": "Update Incident",
      "description": "Update an existing incident",
      "method": "PATCH",
      "path": "/now/table/incident/{id}",
      "headers": {
        "Content-Type": "application/json",
        "Accept": "application/json"
      },
      "bodySchema": {
        "type": "object",
        "properties": {
          "short_description": { "type": "string", "description": "Short description" },
          "description": { "type": "string", "description": "Detailed description" },
          "urgency": { "type": "string", "enum": ["1", "2", "3", "4"] },
          "impact": { "type": "string", "enum": ["1", "2", "3", "4"] },
          "state": { "type": "string", "enum": ["1", "2", "3", "4", "5", "6", "7"], "description": "State (1=New, 2=In Progress, 3=On Hold, 4=Resolved, 5=Closed, 6=Canceled, 7=At Risk)" }
        }
      },
      "urlTemplate": "https://{subdomain}.service-now.com/api/now/table/incident/{id}"
    },
    {
      "id": "delete-incident",
      "name": "Delete Incident",
