  "authentication": {
    "type": "basic",
    "headerName": "Authorization",
    "headerFormat": "Basic {base64(username:password)}",
    "secretKey": "SERVICENOW_PASSWORD",
    "emailSecretKey": "SERVICENOW_USERNAME"
