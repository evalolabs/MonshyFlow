      },
      "note": "Uses legacy implementation in executionService.ts"
    }
  ],
  "apiIntegrations": [
    {
      "id": "pipedrive",
      "name": "Pipedrive",
      "icon": "üìä",
      "description": "CRM and sales pipeline management",
      "baseUrl": "https://api.pipedrive.com/v1",
      "authentication": {
        "type": "apiKey",
        "headerName": "Authorization",
        "headerFormat": "Bearer {apiKey}",
        "secretKey": "PIPEDRIVE_API_KEY"
      },
      "endpoints": [
        {
          "id": "create-deal",
          "name": "Create Deal",
          "description": "Create a new deal in Pipedrive",
          "method": "POST",
          "path": "/deals",
          "headers": {
            "Content-Type": "application/json"
          },
          "bodySchema": {
            "type": "object",
            "properties": {
              "title": { "type": "string", "required": true, "description": "Deal title" },
              "value": { "type": "number", "description": "Deal value" },
              "currency": { "type": "string", "default": "USD", "description": "Currency code" },
              "person_id": { "type": "number", "description": "Associated person ID" },
              "org_id": { "type": "number", "description": "Associated organization ID" }
            },
            "required": ["title"]
          },
          "urlTemplate": "https://api.pipedrive.com/v1/deals"
        },
        {
          "id": "search-leads",
          "name": "Search Leads",
          "description": "Search for leads/persons in Pipedrive",
          "method": "GET",
          "path": "/persons/search",
          "queryParams": {
            "term": "{searchTerm}",
            "fields": "name,email,phone"
          },
          "urlTemplate": "https://api.pipedrive.com/v1/persons/search?term={searchTerm}"
        },
        {
          "id": "update-deal",
          "name": "Update Deal",
          "description": "Update an existing deal in Pipedrive",
          "method": "PUT",
          "path": "/deals/{dealId}",
          "headers": {
            "Content-Type": "application/json"
          },
          "bodySchema": {
            "type": "object",
            "properties": {
              "title": { "type": "string", "description": "Deal title" },
              "value": { "type": "number", "description": "Deal value" },
              "stage_id": { "type": "number", "description": "Deal stage ID" }
            }
          },
          "urlTemplate": "https://api.pipedrive.com/v1/deals/{dealId}"
        },
        {
          "id": "get-deal",
          "name": "Get Deal",
          "description": "Get deal details by ID",
          "method": "GET",
          "path": "/deals/{dealId}",
          "urlTemplate": "https://api.pipedrive.com/v1/deals/{dealId}"
        }
      ]
    },
    {
      "id": "salesforce",
      "name": "Salesforce",
      "icon": "‚òÅÔ∏è",
      "logoUrl": "https://cdn.simpleicons.org/salesforce/00A1E0",
      "description": "Customer relationship management platform",
      "baseUrl": "https://yourinstance.salesforce.com/services/data/v57.0",
      "authentication": {
        "type": "oauth2",
        "headerName": "Authorization",
        "headerFormat": "Bearer {accessToken}",
