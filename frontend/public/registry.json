      }
    },
    {
      "type": "tool-function",
      "name": "Function Tool",
      "icon": "‚öôÔ∏è",
      "description": "Custom function tool - uses legacy implementation",
      "category": "tools",
      "typescriptCreator": "./tools/registerBuiltIns#tool-function",
      "frontend": {
        "hasConfigForm": true,
