    {
      "id": "shopify",
      "name": "Shopify",
      "icon": "üõí",
      "logoUrl": "https://cdn.simpleicons.org/shopify/96BF48",
      "description": "E-commerce platform",
      "baseUrl": "https://{shop}.myshopify.com/admin/api/2024-01",
      "authentication": {
        "type": "apiKey",
        "headerName": "X-Shopify-Access-Token",
        "headerFormat": "{apiKey}",
        "secretKey": "SHOPIFY_ACCESS_TOKEN"
      },
      "endpoints": [
        {
          "id": "create-product",
          "name": "Create Product",
          "description": "Create a new product in Shopify",
          "method": "POST",
          "path": "/products.json",
          "headers": {
            "Content-Type": "application/json"
          },
          "bodySchema": {
            "type": "object",
            "properties": {
              "product": {
