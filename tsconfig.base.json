{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@monshy/core": ["packages/core/src"],
      "@monshy/core/*": ["packages/core/src/*"],
      "@monshy/database": ["packages/database/src"],
      "@monshy/database/*": ["packages/database/src/*"],
      "@monshy/auth": ["packages/auth/src"],
      "@monshy/auth/*": ["packages/auth/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}

